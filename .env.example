# Naukri Automation Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Naukri Account Credentials
NAUKRI_EMAIL=your_email@example.com
NAUKRI_PASSWORD=your_password_here

# Naukri Profile URL
# Direct link to your Naukri profile edit page
NAUKRI_PROFILE_URL=https://www.naukri.com/mnjuser/profile

# GitHub Resume URL
# Raw GitHub file URL to your resume PDF
# Format: https://raw.githubusercontent.com/username/repo/branch/path/to/resume.pdf
# Example: https://raw.githubusercontent.com/username/my-resume/main/resume.pdf
GITHUB_RESUME_URL=https://raw.githubusercontent.com/username/repo/branch/path/to/resume.pdf

# Browser Settings
# Set to "true" to run browser in headless mode (no GUI), "false" to see the browser
# Note: When running in headless mode, the script will use saved cookies to bypass login
#       after the first successful login. Delete cookies.json to force a fresh login.
HEADLESS=false

# Optional: Wait Time (seconds)
# WAIT_TIME=15
